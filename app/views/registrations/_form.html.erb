<%= simple_form_for(@registration, html: { class: 'form-horizontal' }) do |f| %>
       
      <div class="small-6 columns">
        <h3><%= controller.action_name.capitalize %> Registration</h3>
        <%= f.collection_select :camp_id, Camp.active.chronological, :id, :name, prompt: "Select Camp..." %>
        <%= f.collection_select :student_id, Student.active.alphabetical, :id, :proper_name, prompt: "Select Student..." %>
        <%= f.input :payment_status, collection: [['Deposit','deposit'],['Full','full']], prompt: "Select Payment..." %>
        <% if current_page?(:controller => 'registrations', :action => 'new') %>
        <% else %>
          <%= f.input :points_earned %>
        <%end %> 
    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%#= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
    </div>
    </div>

     <div class="small-4 columns">
      <h3>Family not listed? </h3>
      <p> <%= link_to "Add Family", new_family_path %> | <%= link_to "View Families", families_path %></p></div>
     </div>
<% end %>