<% if request.path_parameters == {:action => 'index', :controller => 'home'} %>
<% if !logged_in? %>
 <div id="home">
<%end %>
<% end %>
  <% unless (logged_in?) && (current_user.role? :admin )%>
  <div class="contain-to-grid">
    <% end %>
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <%= link_to image_tag('amcc_logo.png'), home_path %> A&M
        </li>
      </ul>
      <section class="top-bar-section">
        <ul class="right">
          <!-- options for curriculums -->
          <% if can? :read, Curriculum %>
          <li class="has-dropdown">
            <%= link_to "Curriculums", curriculums_path %>
            <ul class="dropdown">
              <li><%= link_to "List Curriculums", curriculums_path %></li>
              <li><%= link_to "Add a Curriculum", new_curriculum_path %></li>
            </ul>
          </li>
          <% end %>

          <!-- options for camps -->
          <% if can? :read, Camp %>
          <li class="has-dropdown">
            <%= link_to "Camps", camps_path %>
            <ul class="dropdown">
              <li><%= link_to "List Camps", camps_path %></li>
              <% if can? :edit, Camp %>
              <li><%= link_to "Add a Camp", new_camp_path %></li>
              <% end %>
            </ul>
          </li>
          <% end %>

           <!-- options for locations -->
          <% if can? :read, Location %>
          <li class="has-dropdown">
            <%= link_to "Locations", locations_path %>
            <ul class="dropdown">
              <li><%= link_to "List Locations", locations_path %></li>
               <% if can? :update, Location %>
              <li><%= link_to "Add a Location", new_location_path %></li>
              <% end %>
            </ul>
          </li>
          <% end %>

          <!-- options for instructors -->
          <% if can? :read, Instructor %>
          <li class="has-dropdown">
            <!-- <a href="#">Instructors</a> -->
            <%= link_to "Instructors", instructors_path %>
            <ul class="dropdown">
              <li><%= link_to "List Instructors", instructors_path %></li>
               <% if can? :update, Instructor %>
              <li><%= link_to "Add an Instructor", new_instructor_path %></li> <% end %>
            </ul>
          </li>
          <% end %>

          <!-- options for students -->
          <% if can? :edit, Student %>
          <li class="has-dropdown">
            <%= link_to "Students", students_path %>
            <ul class="dropdown">
              <li><%= link_to "List Students", students_path %></li>
              <li><%= link_to "Add a Student", new_student_path %></li>
            </ul>
          </li>
          <% end %>

           <!-- options for families -->
          <% if can? :read, Family %>
          <li class="has-dropdown">
            <%= link_to "Families", families_path %>
            <ul class="dropdown">
              <li><%= link_to "List Families", families_path %></li>
              <li><%= link_to "Add a Family", new_family_path %></li>
            </ul>
          </li>
          <% end %>

          <% if can? :create, Registration %>
           <li class="has-dropdown">
            <%= link_to "Register", new_registration_path %>
          </li>
          <% end %>

          <li class="divider"></li>

            <% if logged_in? %>
            <li class="has-dropdown">
              <%= link_to "#{current_user.instructor.first_name}", instructor_path(current_user.instructor) %>
              <ul class="dropdown">
              <li><%= link_to "Sign Up", signup_path %></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
            
            <% else %> 
            <li class="has-dropdown">
              <%= link_to "Guest", signup_path %>
               <ul class="dropdown">
              <li><%= link_to "Login", login_path %></li>
            </ul>
          </li>

            <% end %>
  
       <li class="divider"></li>

        </ul>
      </section>
    </nav>
    
  </div>